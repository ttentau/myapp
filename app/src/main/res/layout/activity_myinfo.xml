<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_user_photo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_selector">


        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_register_photo_defult"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="头像"
            android:textColor="@color/text_dark"
            android:textSize="17sp"/>
    </RelativeLayout>

    <include layout="@layout/split_view"/>

    <RelativeLayout
        android:id="@+id/rl_user_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/main_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="昵称"
            android:textColor="@color/text_dark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="微信名"
            android:textColor="@color/main_gray"
            android:textSize="17sp"/>
    </RelativeLayout>

    <include layout="@layout/split_view"/>

    <RelativeLayout
        android:id="@+id/rl_user_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/main_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="微信号"
            android:textColor="@color/text_dark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_user_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="666"
            android:textColor="@color/main_gray"
            android:textSize="17sp"/>
    </RelativeLayout>

    <include layout="@layout/split_view"/>

    <RelativeLayout
        android:id="@+id/rl_user_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/main_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="二维码地址"
            android:textColor="@color/text_dark"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/iv_user_code"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_code"/>
    </RelativeLayout>

    <include layout="@layout/split_view"/>

    <RelativeLayout
        android:id="@+id/rl_user_shoplocation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/main_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="我的地址"
            android:textColor="@color/text_dark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_user_shoplocation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="上海陆家嘴"
            android:textColor="@color/main_gray"
            android:textSize="17sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_sex"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="性别"
            android:textColor="@color/text_dark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_user_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/main_gray"
            android:textSize="17sp"/>
    </RelativeLayout>

    <include layout="@layout/split_view"/>

    <RelativeLayout
        android:id="@+id/rl_user_location"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/main_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="地区"
            android:textColor="@color/text_dark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_user_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="上海陆家嘴"
            android:textColor="@color/main_gray"
            android:textSize="17sp"/>
    </RelativeLayout>

    <include layout="@layout/split_view"/>

    <RelativeLayout
        android:id="@+id/rl_user_autograph"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/main_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="个性签名"
            android:textColor="@color/text_dark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_user_autograph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="清谈可以饱，梦想接无由"
            android:textColor="@color/main_gray"
            android:textSize="17sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_linkaccount"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="LinkedIn账号"
            android:textColor="@color/text_dark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_user_linkaccount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="未设置"
            android:textColor="@color/main_gray"
            android:textSize="17sp"/>
    </RelativeLayout>
</LinearLayout>