<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/friend_found"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/item_bg_selector"
        android:layout_height="45dp">


        <ImageView
            android:id="@+id/iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/friend"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv1"
            android:text="朋友圈"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/myphoto"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sao_sao"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/item_bg_selector"
        android:layout_height="45dp">


        <ImageView
            android:id="@+id/iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_de_saoyisao"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv2"
            android:text="扫一扫"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/yao_yi_yao"
        android:layout_width="match_parent"
        android:background="@drawable/item_bg_selector"
        android:layout_height="45dp">
        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_de_yao"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv3"
            android:text="摇一摇"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/near_people"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/item_bg_selector"
        android:layout_height="45dp">


        <ImageView
            android:id="@+id/iv4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_de_nearby"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv4"
            android:text="附近的人"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/piaoliu_ping"
        android:layout_width="match_parent"
        android:background="@drawable/item_bg_selector"
        android:layout_height="45dp">

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_de_ping"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv5"
            android:text="漂流瓶"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shopping"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/item_bg_selector"
        android:layout_height="45dp">


        <ImageView
            android:id="@+id/iv6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_de_shop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv6"
            android:text="购物"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/games"
        android:layout_width="match_parent"
        android:background="@drawable/item_bg_selector"
        android:layout_height="45dp">

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_de_game"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv7"
            android:text="游戏"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/small_program"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/item_bg_selector"
        android:layout_height="45dp">


        <ImageView
            android:id="@+id/iv8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_me_collect"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv8"
            android:text="小程序"/>
    </RelativeLayout>

</LinearLayout>