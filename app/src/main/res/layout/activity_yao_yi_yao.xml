<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#272D2B"
                android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_friend_yao_hua"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <RelativeLayout
            android:id="@+id/yao_yi_yao_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/blackwx"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_yao_up"/>
            <View
                android:id="@+id/view_top"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray"/>

        </RelativeLayout>
        <View
            android:id="@+id/view_center"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/main_black"/>
        <RelativeLayout
            android:id="@+id/yao_yi_yao_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/blackwx"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_yao_bottom"/>
            <LinearLayout
                android:id="@+id/progress"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:orientation="horizontal">
                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/grayl"
                    android:text="正在搜寻同一时刻摇手机和人"/>
            </LinearLayout>

            <View
                android:id="@+id/view_bottom"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/yao_people"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_gray_rad3"
        android:visibility="invisible"
        android:layout_width="250dp"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_search_friend"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/myphoto"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayl"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_search_friend"
            android:text="真是无奈"/>
        <TextView
            android:id="@+id/tv_weixi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayl"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_search_friend"
            android:layout_below="@id/tv_name"
            android:text="相距2400公里"/>

    </RelativeLayout>

</RelativeLayout>
