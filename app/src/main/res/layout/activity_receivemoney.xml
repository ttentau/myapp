<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_customActionbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/yellow_receivemoney"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_up"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:background="@drawable/ic_actionbar_arrowup"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="我要收款"
            android:textColor="@color/main_white"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_pay_bg_graywhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/graywhite">

            <ImageView
                android:id="@+id/iv_pay_shop"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_pay_receive"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_pay_shop"
                android:gravity="center_vertical"
                android:text="我要收款"
                android:textColor="@color/yellow_receivemoney"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_pay_overflow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_pay_iv"
                android:padding="10dp"
                android:src="@drawable/ic_pay_overflow_three"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="无需加好友，扫二维码向我付钱"
                android:textColor="@color/main_gray"
                android:textSize="13sp"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_money_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="￥999.00"
                android:textColor="@color/main_black"
                android:textSize="40sp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/tv_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/main_black"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/iv_pay_code"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/img_big_code"/>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp">

                <TextView
                    android:background="@drawable/selector_text"
                    android:id="@+id/tv_setmoney"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="设置金额"
                    android:textColor="@color/main_blue"
                    android:textSize="13sp"/>

                <TextView
                    android:background="@drawable/selector_text"
                    android:id="@+id/tv_savephoto"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="保存图片"
                    android:textColor="@color/main_blue"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>