<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_friend_share"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="10dp"
              android:background="@color/main_light_gray"
              android:orientation="horizontal"
              android:visibility="visible">


    <ImageView
        android:id="@+id/iv_friend_content_web_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/myphoto"/>

    <TextView
        android:id="@+id/tv_friend_content_web_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLines="2"
        android:padding="5dp"
        android:text="求一份安卓开发工作啊啊啊啊呀职啊啊啊呀职啊啊呀职啊啊啊呀职啊啊中职啊呀职啊呀陪吃陪喝啊中陪吃陪喝职"
        android:textColor="@color/blackwx"/>
</LinearLayout>