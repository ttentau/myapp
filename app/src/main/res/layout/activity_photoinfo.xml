<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/rl_customActionbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="visible"
        android:background="@color/blackwx">

        <ImageView
            android:id="@+id/iv_title_up"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/ic_actionbar_arrowup"
            />

        <TextView
            android:id="@+id/tv_title_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv_title_up"
            android:text="1/2"
            android:textColor="@color/main_white"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="7dp"
            android:background="@drawable/shape_custom_actionbar_bg"
            android:text="确定"
            android:textColor="@color/main_white"
            android:textSize="17sp"/>

    </RelativeLayout>


</FrameLayout>