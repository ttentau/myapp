<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/friend"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_bg_selector">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv1"
                android:gravity="center"
                android:text="设置备注及标签"
                android:textColor="@color/text_dark"
                android:textSize="17sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_bg_selector">
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv2"
                android:gravity="center"
                android:text="标为星标好友"
                android:textColor="@color/text_dark"
                android:textSize="17sp"/>

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/friend1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_bg_selector">


            <ImageView
                android:id="@+id/iv11"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv11"
                android:gravity="center"
                android:text="设置朋友圈权限"
                android:textColor="@color/text_dark"
                android:textSize="17sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_bg_selector">

            <ImageView
                android:id="@+id/iv22"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv22"
                android:gravity="center"
                android:text="发送该名片"
                android:textColor="@color/text_dark"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/friend2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_bg_selector">


            <ImageView
                android:id="@+id/iv12"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv12"
                android:gravity="center"
                android:text="投诉"
                android:textColor="@color/text_dark"
                android:textSize="17sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_bg_selector">

            <ImageView
                android:id="@+id/iv23"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv23"
                android:gravity="center"
                android:text="加入黑名单"
                android:textColor="@color/text_dark"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_bg_selector">

            <ImageView
                android:id="@+id/iv233"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv233"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/text_dark"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_bg_selector">

            <ImageView
                android:id="@+id/iv232"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv232"
                android:gravity="center"
                android:text="添加到桌面"
                android:textColor="@color/text_dark"
                android:textSize="17sp"/>
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>