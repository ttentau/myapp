<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_customActionbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/main_green"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_title_up"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ic_actionbar_arrowup"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="收付款"
                android:textColor="@color/main_white"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_pay_bg_graywhite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/main_light_gray">

                <ImageView
                    android:id="@+id/iv_pay_shop"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_pay_ok"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_pay_shop"
                    android:gravity="center_vertical"
                    android:text="向商家付款"
                    android:textColor="@color/main_green"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_pay_overflow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_pay_iv"
                    android:padding="10dp"
                    android:src="@drawable/ic_pay_overflow_three"/>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:text="1302   2623   7304  2423   54"
                        android:textColor="@color/main_black"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/iv_pay_tiao_code"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/ic_pay_tiao_code"/>

                    <ImageView
                        android:id="@+id/iv_pay_code"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/img_big_code"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:id="@+id/tv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="使用零钱,"
                            android:textColor="@color/main_gray"
                            android:textSize="13sp"/>

                        <TextView
                            android:background="@drawable/selector_text"
                            android:id="@+id/tv_pay_exchange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="更换"
                            android:textColor="@color/main_blue"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_float"
                    android:orientation="vertical"
                    android:background="@color/graywhiteup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pay_safe"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="该功能仅用于向商家付款。请不要将付款码及数字发送给他人，以保障资金安全"
                        android:textSize="16sp"
                        android:textColor="@color/main_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:background="@drawable/shape_btn_stroke"
                        android:id="@+id/btn_ok"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:text="知道了"
                        android:textColor="@color/main_green"
                        android:layout_width="100dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:background="@drawable/selector_text"
                        android:id="@+id/tv_lookdetails"
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/main_blue"
                        android:text="查看详情"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pay_bnottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_pay_item"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_pay_receive"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="我要收款"
                android:textColor="@color/gold"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_big_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_white"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_tiao_code_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            android:src="@drawable/ic_pay_tiao_code_big"/>

        <ImageView
            android:id="@+id/iv_code_big"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/img_big_code"/>
    </FrameLayout>
</RelativeLayout>