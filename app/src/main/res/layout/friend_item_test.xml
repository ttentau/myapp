<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/main_white"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_friend_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:src="@drawable/myphoto"/>

    <LinearLayout
        android:layout_toRightOf="@id/iv_friend_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_friendcricle_name_bg"
                android:text="真是无奈"
                android:textColor="@color/bluewx"
                />
            <ttentau.weixin.ui.widgets.ExpandTextView
                android:id="@+id/tv_friend_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        <ttentau.weixin.ui.widgets.MyGridView
            android:id="@+id/gv_friend_content_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:numColumns="3"
            android:visibility="gone"
           />
        <LinearLayout
            android:id="@+id/ll_friend_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@color/main_light_gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_friend_content_web_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/myphoto"/>

            <TextView
                android:id="@+id/tv_friend_content_web_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="2"
                android:padding="5dp"
                android:text="求一份安卓开发工作啊啊啊啊呀职啊啊啊呀职啊啊呀职啊啊啊呀职啊啊中职啊呀职啊呀陪吃陪喝啊中陪吃陪喝职"
                android:textColor="@color/blackwx"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_friend_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="7小时前"/>
            <TextView
                android:layout_toRightOf="@id/tv_friend_time"
                android:id="@+id/tv_friend_delete"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/bluewx"
                android:text="删除"/>

            <ImageView
                android:id="@+id/iv_friend_choose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:paddingBottom="7dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:src="@drawable/ic_friend_item_pup"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_friend_pinglun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:background="@color/main_light_gray"
            android:orientation="vertical"
            >
            <ttentau.weixin.ui.widgets.MyPraiseTextView
                android:id="@+id/tv_friend_dianzan_name"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                />
            <ttentau.weixin.ui.widgets.CommentListView
                android:id="@+id/tv_friend_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/main_light_gray"/>
    </LinearLayout>
</RelativeLayout>