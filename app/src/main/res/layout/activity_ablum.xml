<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_customActionbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="visible"
        android:background="@color/blackwx">

        <ImageView
            android:id="@+id/iv_title_up"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/ic_actionbar_arrowup"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv_title_up"
            android:text="图片和视屏"
            android:textColor="@color/main_white"
            android:textSize="20sp"/>

        <Button
            android:gravity="center"
            android:id="@+id/btn_ok"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="7dp"
            android:background="@drawable/shape_custom_actionbar_bg"
            android:text="确定"
            android:textColor="@color/main_white"
            android:textSize="16sp"/>

    </RelativeLayout>

    <GridView
        android:background="@color/blackwx"
        android:id="@+id/gv"
        android:numColumns="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></GridView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blackwx"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:text="图片和视屏"/>
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="预览"
            android:layout_height="50dp"/>
    </RelativeLayout>

</LinearLayout>